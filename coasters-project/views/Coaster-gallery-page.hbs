<div>
    <div class="container">

        <h1>Coaster Gallery Page</h1>

        <hr>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <table class="table table-striped">


                    {{#each coasters}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>Length {{length}}</td>
                        <td>Inversions {{inversions}}</td>
                        <td class="text-right"><img src="{{imageUrl}}" alt="Image" class="img-fluid"></td>
                    </tr>
                    {{/each}}

            </div>
        </div>
        <a href="/" class="btn btn-dark">Volver a Inicio</a>
    </div>

</div>