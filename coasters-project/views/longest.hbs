<div class="container">

    <h1>Longest Coasters</h1>
    <p>These coasters are more than 1000 meters long</p>
    <hr>

    <div class="row justify-content-center">

        {{#each coasters}}
        <div class="card col-3 m-3 p-2">
            <img src="{{imageUrl}}" class="coaster-img card-img-top" alt="{{title}}">
            <div class="card-body">
                <h5 class="card-title">{{title}}</h5>
                <hr>
                <ul>
                    <li>{{length}} meters long</li>
                    <li>{{inversions}} inversions</li>
                </ul>
                <p class="card-text">{{description}}</p>
            </div>
        </div>
        {{/each}}

    </div>

</div>