<div class="container">
    <h1>Welcome to the longest coasters page!</h1>
    <hr>
    <div class="row">
        {{#each coasters}}
        <div class="col-md-4">
            <ul>
                <div class="card" style="width: 18rem;">
                    <img class="card-img-top" src="{{imageUrl}}" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                        <p>{{inversion}}</p>
                    </div>
                </div>
            </ul>
        </div>
        {{/each}}
    </div>
    <hr>
    <a href="/" class="btn btn-dark mb-5">Volver a inicio</a>
</div>