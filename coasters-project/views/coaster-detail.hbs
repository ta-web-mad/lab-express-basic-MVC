<div class="container text-center">
    <div class="row align-items-start">
        <div class="col">
            <img class="coaster-img" src="{{ imageUrl }}" alt="Coaster Image">
        </div>
        <div class="col">
            <p>
                <a href="/beers/{{id}}">{{ Title }}</a>
            </p>
            <p>{{ description }}</p>
            <p>Length: {{ length }}</p>
            <p>Inversions: {{ inversions }}</p>
        </div>
    </div>
</div>