<div class="container mt-4">
    <div class="row">
        {{#each coasters}}

        <div class="col-sm-4">

            <div class="card" style="width: 20rem;">
                <img src="{{imageUrl}}" class="card-img-top" alt="{{title}}">
                <div class="card-body">
                    <h5 class="card-title">{{title}}</h5>
                    <p>{{description}}</p>
                    <p>Length: {{length}}</p>
                    <p>Inversions: {{inversions}}</p>
                </div>
                <hr>
            </div>

        </div>
        {{/each}}
    </div>