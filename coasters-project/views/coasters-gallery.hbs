<div class="container mt-5">

    <h1>coasters Gallery</h1>

    <hr>

    <div class="row justify-content-center">
        <div class="col-md-6">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">title</th>
                        <th scope="col">description</th>
                        <th scope="col">length</th>
                        <th scope="col">inversions</th>
                        <th scope="col">imgeUrl</th>
                    </tr>
                </thead>
                <tbody>

                    {{#each coaster}}
                    <tr>
                        <td>{{title}}</td>
                        <td>{{description}}</td>
                        <td>{{length}}</td>
                        <td>{{inversions}}</td>
                        <td><img src="{{imageUrl}}" class="card-img-top" alt="img-gallery"></td>
                    </tr>
                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>

    <a href="/" class="btn btn-dark">Volver a inicio</a>

</div>